<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_tos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tupledevelopment.leafe.Activities.ViewTos">

    <Button
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/goToSign"
        android:background="@drawable/button"
        android:textColor="#FFFFFF"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:id="@+id/view_tos_relative"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/border3">

        <TextView
            android:text="Moving Services Total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/view_tos_title" />
    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/view_tos_grid"
        android:layout_alignParentStart="true"
        android:layout_below="@id/view_tos_relative"
        android:layout_above="@+id/view_tos_total"
        android:background="@drawable/border3"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="8dp">

        <TextView
            android:text="DATE"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/view_tos_grid_date"
            android:layout_row="0"
            android:layout_column="0" />
        <TextView
            android:text="10/17/16"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/view_tos_grid_date1"
            android:layout_row="1"
            android:layout_column="0" />

        <TextView
            android:text="TRUCK"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/view_tos_grid_truck"
            android:layout_row="0"
            android:layout_column="1"/>

        <TextView
            android:text="A1"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/view_tos_grid_truck1"
            android:layout_row="1"
            android:layout_column="1"/>

        <TextView
            android:text="RATE/HR"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/view_tos_grid_rate"
            android:layout_row="0"
            android:layout_column="2"/>

        <TextView
            android:text="$0.0"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/view_tos_grid_rate1"
            android:layout_row="1"
            android:layout_column="2"/>

        <TextView
            android:text="MOVERS"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/view_tos_grid_movers"
            android:layout_row="0"
            android:layout_column="3"/>

        <TextView
            android:text="Sebas"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/view_tos_grid_movers1"
            android:layout_row="1"
            android:layout_column="3"/>

        <TextView
            android:text="Alex"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/view_tos_grid_movers2"
            android:layout_row="2"
            android:layout_column="3"/>

    </GridLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:id="@+id/view_tos_total"
        android:layout_above="@+id/goToSign"
        android:background="@drawable/border3">

        <TextView
            android:text="Total: $0.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/view_tos_total_text" />

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/view_tos_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
