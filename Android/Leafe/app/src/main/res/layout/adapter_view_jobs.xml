<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/border2">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <TextView
            android:text="Move#23"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:minHeight="30dp"
            android:id="@+id/viewJobName"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/viewJobsDescription"
            android:layout_alignStart="@+id/viewJobsDescription"
            android:paddingBottom="4dp"/>

        <TextView
            android:text="2 man move at 123 Fake Street, Expected job time is around 2 hours."
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/viewJobsDescription"
            android:textSize="18dp"
            android:minHeight="20dp"
            android:layout_marginRight="20px"
            android:layout_marginLeft="20px"
            android:layout_below="@+id/viewJobName"
            android:layout_alignParentEnd="true"
            android:paddingBottom="2dp"/>

        <TextView
            android:text="TextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/viewJobsFormID"
            android:layout_below="@+id/viewJobsDescription"
            android:layout_alignStart="@+id/viewJobsDescription"
            android:textSize="18dp"
            android:minHeight="20dp"
            android:paddingBottom="2dp"/>

        <TextView
            android:text="TextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewJobsFormID"
            android:layout_alignStart="@+id/viewJobsFormID"
            android:textSize="18dp"
            android:minHeight="20dp"
            android:id="@+id/viewJobsEmployeeID"
            android:paddingBottom="2dp"/>
    </RelativeLayout>
</RelativeLayout>